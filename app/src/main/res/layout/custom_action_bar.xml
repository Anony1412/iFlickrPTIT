<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:padding="@dimen/dp_16"
    android:background="@color/colorGray">

    <ImageView
        android:id="@+id/imageActionbarLogo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="0dp"
        android:src="@drawable/image_logo_v1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonBackActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_button_back"/>

    <TextView
        android:id="@+id/textActionBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        app:layout_constraintStart_toEndOf="@id/imageActionbarLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@android:string/untitled"
        android:layout_marginStart="@dimen/dp_16"
        android:textColor="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
